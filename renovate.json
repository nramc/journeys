{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "pin",
  "automerge": false,
  "automergeStrategy": "fast-forward",
  "automergeType": "pr",
  "platformAutomerge": true,
  "packageRules": [
    {
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "auto",
      "matchPackageNames": [
        "/.*eslint.*/"
      ]
    },
    {
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "auto",
      "matchPackageNames": [
        "/.*karma.*/",
        "/.*jasmine.*/"
      ]
    }
  ]
}
